generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Post {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  title       String
  titleStyle  Json?
  content     String   @db.Text
  description String
  keywords    String[]
  category    String
  tags        String[]
  publishedAt DateTime
  updatedAt   DateTime @updatedAt
}